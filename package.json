{
  "name": "amos",
  "version": "0.2.12",
  "description": "A decentralized state manager for react",
  "keywords": [
    "react",
    "state",
    "management",
    "state-management",
    "amos"
  ],
  "author": "acrazing <joking.young@gmail.com>",
  "main": "dist/amos.cjs.js",
  "module": "dist/amos.es.js",
  "umd": "dist/amos.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "rollup -w --config rollup.config.js",
    "bundle": "rollup --config rollup.config.js",
    "build": "run-s clean bundle",
    "test": "jest",
    "test:report": "rm -rf .cache && jest --coverage",
    "prepublishOnly": "run-s test build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:acrazing/amos.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@testing-library/react": "^11.1.2",
    "@testing-library/react-hooks": "^3.4.2",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.15",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "express": "^4.17.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "rollup": "^2.33.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "tslib": "^2.0.3"
  },
  "peerDependencies": {
    "@types/react": "*",
    "react": "*"
  },
  "umdExternals": {
    "react": "React"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,less,scss,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node",
      "mjs"
    ],
    "cacheDirectory": ".cache/jest",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}",
      "!**/*.d.ts"
    ],
    "coverageDirectory": "temp/coverage",
    "coverageReporters": [
      "json",
      "html"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.spec.{ts,tsx}"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "packageManager": "yarn@1.22.21+sha1.1959a18351b811cdeedbd484a8f86c3cc3bbaf72"
}
